@model IEnumerable<FundsManager.Models.User_Info>

@{
    ViewBag.Title = "Index";
}

<h2>用户列表</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.user_name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.real_name)
        </th>
        <th>
