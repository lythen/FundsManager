@{ 
    string name="";
    if (Request.Cookies["realname"] != null)
    {
        name = Server.UrlDecode(Request.Cookies["realname"].Value.ToString());
    }
}
<style>
    .sidebar .widget2 {
        background: #fff;
        padding: 15px 16px 5px 16px;
        font-size:14px;
        margin-bottom:5px;
}
        .widget .title {
            margin-bottom:0px;
        }
        .widget .community {
            padding-top:5px;
        }
</style>
<div class="widget widget2">
    <h5 class="title">欢迎！&nbsp;@name</h5>
    <div class="content community">
        <p>
            <a href="@Url.RouteUrl(new { controller = "Login", action = "Logout" })" title="注销当前登陆" target="_top" onclick="return confirm('是否退出当前登陆?');">
                <i class="fa fa-comments"></i> 退出登陆
            </a>
            <a href="@Url.RouteUrl(new { controller = "UserManager", action = "Edit" })" title="查看或编辑个人信息" target="_top">
                <i class="fa fa-comments"></i> 个人信息
            </a>
        </p>
    </div>
</div>
<script src="~/scripts/jquery-1.10.2.min.js"></script>
<script src="~/scripts/extendindexof.js"></script>
<script>
    $(function(){
        if(''=='@name')
           location.href='@Url.RouteUrl(new { controller = "Login", action = "Logout" })';
    });
</script>