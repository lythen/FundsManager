@model IEnumerable<FundsManager.ViewModels.ResponseDetail>

@{
    ViewBag.Title = FundsManager.Controllers.SiteInfo.getSiteName() + "待批复列表";
    List<FundsManager.Models.SelectOption> users = (List<FundsManager.Models.SelectOption>)ViewData["ViewUsers"];
}
<style>
    .displayN {
        display: none;
    }

    .ul-user li {
        list-style: none;
    }
    td {
        vertical-align: top;
    }
</style>
<h2>待批复列表</h2>
<div class="col-md-10 err" style="color:red;width:100%;text-align:center;">
    @ViewBag.msg
</div>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apply_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.capply_number)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.fundsCode)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.strAddDate)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.applyUser)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.content)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.strState)
        </th>
        <th>批复操作</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.apply_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.capply_number)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.fundsCode)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strAddDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.applyUser)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.content)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.strState)
            </td>
            <td>
                <a href="javascript:void(0);" onclick="SetAgree(@item.id)" data-toggle="modal" data-target="#myModal">查看详情</a>
            </td>
        </tr>
    }

</table>
<input type="hidden" id="hidID" value="" />
<!-- Modal -->
<div class="modal fade" id="myModal" tabindex="-1" role="dialog" aria-labelledby="myModalLabel">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" data-dismiss="modal" aria-label="Close"><span aria-hidden="true">&times;</span></button>
                <h4 class="modal-title" id="myModalLabel">申请详情</h4>
            </div>
            <div class="modal-body">
                <div>
                    <table class="table">
                        <tr><td>申请人：</td><td id="aname"></td></tr>
                        <tr><td>主订单号：</td><td id="anum"></td></tr>
                        <tr><td>子订单号：</td><td id="cnum"></td></tr>
                        <tr><td>经费编号：</td><td id="fcode"></td></tr>
                        <tr><td>申请金额：</td><td id="afee"></td></tr>
                        <tr><td>申请说明：</td><td id="ainfo"></td></tr>
                    </table>
                </div>
                <div class="form-horizontal">
                    <div class="form-group">
                        <label class="control-label col-md-2">批复操作</label>
                        <div class="col-md-10">
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">批复结果</label>
                        <div class="col-md-10">
                            <select id="se-res" class="select form-control" onchange="setNone(this)">
                            <option value="yes">通过</option>
                            <option value="no">拒绝</option>
                            </select>
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">下一步</label>
                        <div class="col-md-10">
                            @if (users != null && users.Count() > 0)
                            {
                                <ul class="ul-user">
                                    @foreach (var item in users)
                                    {
                                    string id = "cbk" + @item.id;
                                    <li>
                                        <input type="radio" class="cbkuser" name="cbkUsers" id="@id" value="@item.id" /><label for="@id">@item.text</label>
                                    </li>
                                    }
                                </ul>
                            }
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2"></label>
                        <div class="col-md-10" style="border:1px red solid;color:red;padding:5px;">
                            如果不需要再下一步批复，可不选择下一步批复的领导。
                        </div>
                    </div>
                    <div class="form-group">
                        <label class="control-label col-md-2">批复说明</label>
                        <div class="col-md-10">
                            <textarea class="form-control" id="txtWhy"></textarea>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-default" data-dismiss="modal">关闭</button>
                <button type="button" class="btn btn-primary" data-dismiss="modal" onclick="saveResean();">保存</button>
            </div>
        </div>
    </div>
</div>
<script src="~/scripts/jquery-1.10.2.min.js"></script>
<script src="~/scripts/bootstrap.min.js"></script>
<script>
    $(function () {

    });
    function SetAgree(id) {
        $('#hidID').val(id);
        $('#aname').text(''); $('#anum').text(''); $('#cnum').text(''); $('#fcode').text(''); $('#afee').text(''); $('#ainfo').html('');
        $.getJSON('@Url.RouteUrl(new {controller= "RespondManager", action= "Details" })?id=' + id, function (data) {
            if (data.state == 1) {
                $('#aname').text(data.data.applyUser);
                $('#anum').text(data.data.apply_number);
                $('#cnum').text(data.data.capply_number);
                $('#fcode').text(data.data.fundsCode);
                $('#afee').text(data.data.applyAmount);
                if (data.data.content)
                    $('#ainfo').html(data.data.content.replace(/\n/g, '<br />'));
            } else {
                $('.err').text(data.msg_text);
            }
        });
    }
    function saveResean() {
        var formdata = new Object();
        formdata.agree = $('#se-res').val();
        formdata.reason = encodeURI($('#txtWhy').val());
        formdata.id = $('#hidID').val();
        formdata.next = $('input[name="cbkUsers"]:checked').val();
        $.post('@Url.RouteUrl(new {controller= "RespondManager", action= "SetAgree"})', formdata, function (data) {
            if (data.state == 1) {
                alert('操作成功。');
                window.location.reload();
            } else {
                $('.err').text(data.msg_text);
            }
        });
    }
    function setNone(obj) {
        if (obj.value == 'no')
            $('input[name="cbkUsers"]').attr('disabled', 'disabled');
        else
            $('input[name="cbkUsers"]').removeAttr('disabled');
    }

</script>