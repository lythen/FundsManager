@model IEnumerable<FundsManager.ViewModels.ApplyChildListModel>

@{
    ViewBag.Title = FundsManager.Controllers.SiteInfo.getSiteName() + "MyFunds";
}

<h2>MyFunds</h2>

<p>
    @Html.ActionLink("Create New", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.apply_user_id)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apply_time)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apply_amount)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.apply_state)
        </th>
        <th></th>
    </tr>

@foreach (var item in Model) {
    <tr>
        <td>
            @Html.DisplayFor(modelItem => item.apply_user_id)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apply_time)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apply_amount)
        </td>
        <td>
            @Html.DisplayFor(modelItem => item.apply_state)
        </td>
        <td>
            @Html.ActionLink("Edit", "Edit", new { id=item.apply_number }) |
            @Html.ActionLink("Details", "Details", new { id=item.apply_number }) |
            @Html.ActionLink("Delete", "Delete", new { id=item.apply_number })
        </td>
    </tr>
}

</table>
